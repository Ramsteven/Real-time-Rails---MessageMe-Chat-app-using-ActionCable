
<h1 class="ui center aligned icon header">Welcome to MessageMe - a complete Chat App</h1>
<h3 class="ui center aligned icon header">
  <i class="circular rocketchat inverted purple icon"></i>

  Log in to Continue
</h3>
<div class="ui placeholder segment purple">
  <div class="ui two column very relaxed stackable grid ">
    <div class="column">
      <%= form_for(:session, html:{ class: "ui form", role:"form"}, url: login_path) do |f|%>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input ">
          <%= f.text_field :username, placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password"%>
          <div class="ui left icon input">
          <%= f.text_field :password, placeholder: "Password"%>
          <div class="ui left icon input">
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui purple submit button" %>
      <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
